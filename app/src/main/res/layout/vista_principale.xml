<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/viewStringaRisultato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textColor="@color/stringa_risultato"
        android:textSize="26sp"
        android:textStyle="normal"/>
    <org.ros.android.view.visualization.VisualizationView
        android:id="@+id/visualizationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewStringaRisultato"
        android:layout_centerVertical="true"
        android:layout_above="@id/bottoneParla"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/bottoneParla"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:src="@drawable/ic_mic"/>
</RelativeLayout>