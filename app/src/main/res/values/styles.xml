<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Nella finestra delle impostazioni non c'è la barra perchè:AppCompat l'aggiunge solo alle activity che estendono ActionBarActivity,
    mentre le preferenze estendono PreferenceActivity. Per questo la aggiungiamo manualmente
     <style name="BottoneAppCompat" parent="android:style/Widget.Material.Button">
    -->

    <style name="BottoneAppCompat" parent ="Widget.AppCompat.Button">
        <item name="android:textColor">@color/bianco</item>
    </style>

    <!-- Theme.AppCompat.DayNight.NoActionBar  -->
    <!-- Theme.AppCompat.Light.DarkActionBar  -->
    <style name="TemaAppCompat" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarSize">40dip</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/bottone_selezionato</item>
        <item name="android:colorButtonNormal">@color/bottone_normale</item>
        <item name="buttonStyle">@style/BottoneAppCompat</item>
    </style>
</resources>
